{
  "name": "mikealmond/twig-color-extension",
  "description": "A series of Twig filters for color manipulations",
  "type": "project",
  "keywords": [
    "mikealmond",
    "color",
    "twig",
    "filter"
  ],
  "homepage": "https://github.com/mikealmond/twig-color-extension",
  "license": "MIT",
  "require": {
    "php": "~7.0",
    "ext-ctype": "*",
    "ext-json": "*",
    "mikealmond/color": "^0.1.0",
    "twig/twig": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "MikeAlmond\\TwigColorExtension\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MikeAlmond\\TwigColorExtension\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "config": {
    "authors": [
      {
        "name": "Mike Almond",
        "email": "mike.almond@gmail.com",
        "homepage": "https://mikealmond.com",
        "role": "Developer"
      }
    ]
  }
}
